<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:background="@color/carbon_colored">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/addfriend_profile"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginLeft="20sp"
        android:gravity="center"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/addfriend_name"
        android:layout_width="300sp"
        android:layout_height="match_parent"
        android:gravity="center" />

    <Button
        android:id="@+id/addFriend_button"
        android:layout_width="55sp"
        android:layout_height="45sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/addfriend_button"
        android:textColor="@color/carbon_colored"
        android:textSize="20sp"
        android:text="추가"/>
</LinearLayout>